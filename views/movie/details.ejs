<%- include ('../partials/navbar.ejs') %>
    <!-- movie details -->
    <div class="details card mx-5 mt-5">
        <div class="row mb-4 my-4">
            <div class="col my-auto ml-3">
                <img class="mx-auto" alt=<%= movie.Title %> src="http://localhost:5000/images/movies/<%=movie.Movie_Poster%>" height="500px">
            </div>

            <div class="col">
                <div class="card-body">
                    <h1 class="text-center"><%= movie.Title %></h1>
                    <hr class="my-4">
                    <!-- split time & convert to number -->
                    <% let duration=movie.Duration.split(":").map(i=>Number(i)) %>
                    <p class="text-left mb-3"><b>Duration:</b> 
                        <%= duration[0]> 1 ? duration[0]+"hrs " : duration[0] === 1 ? duration[0]+"hr " : ""%> 
                        <%= duration[1]> 1 ? duration[1]+"mins" : duration[1] === 1 ? duration[1]+"min" : duration[1] === 0 && duration[0] === 0 ? "Not Applicable" : ""%>
                    </p>
                    <p class="text-left mb-3"><b>Genre:</b> <%= movie.Genre %></p>
                    
                    <!-- Format Birthday -->
                    <% const months = ["January", "February", "March","April", "May", "June", "July", "Aug", "September", "October", "November", "December"] %> 
                    <% let release = months[movie.Release_Date.getMonth()] + " " + movie.Release_Date.getDate() + ", " + movie.Release_Date.getFullYear() %> 
                    <p class="text-left mb-3"><b>Released Date:</b> <%= release %></p>
                    
                    <p class="text-left"><b>Description:</b></p>
                    <p class="text-left mx-5 mb-3"><%= movie.Description %></p>                    
                </div>
            </div>
        </div>
    </div>

    <div class="details">
        <div class="container">
            <h1 class="text-center">Schedule</h1>
                <hr class="my-4">
            <h2 class="text-left">Date: </h2>
                <button type="button" class="btn btn-outline-dark btn-lg mr-5 my-3">Nov 21</button>
                <button type="button" class="btn btn-outline-dark btn-lg mr-5 my-3">Nov 22</button>
                <button type="button" class="btn btn-outline-dark btn-lg mr-5 my-3">Nov 23</button>
                <button type="button" class="btn btn-outline-danger btn-lg mr-5 my-3"><i class="fa fa-calendar-check-o" aria-hidden="true"></i></button>
            <hr class="my-4">
            <h2 class="text-left mb-4">Mall: </h2>
            <ul class="nav nav-tabs nav-fill" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link" id="schedule-tab" data-toggle="tab" href="#manila" role="tab"
                        aria-controls="manila" aria-selected="true">Manila</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="about-tab" data-toggle="tab" href="#taguig" role="tab" aria-controls="taguig"
                        aria-selected="false">Taguig</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="about-tab" data-toggle="tab" href="#makati" role="tab" aria-controls="makati"
                        aria-selected="false">Makati</a>
                </li>
            </ul>
            <div class="tab-content mx-5 my-5" id="myTabContent">
                <div class="tab-pane fade show active" id="manila" role="tabpanel" aria-labelledby="">
                    <button type="button" class="btn btn-outline-dark btn-lg mr-5 mt-3">10:00 am</button>
                    <button type="button" class="btn btn-outline-dark btn-lg mr-5 mt-3">02:00 pm</button>
                    <button type="button" class="btn btn-outline-dark btn-lg mr-5 mt-3">04:00 pm</button>
                </div>
                <div class="tab-pane" id="taguig" role="tabpanel" aria-labelledby="">
                    <button type="button" class="btn btn-outline-dark btn-lg mr-5 mt-3">10:00 am</button>
                    <button type="button" class="btn btn-outline-dark btn-lg mr-5 mt-3">10:00 am</button>
                    <button type="button" class="btn btn-outline-dark btn-lg mr-5 mt-3">10:00 am</button>
                </div>
                <div class="tab-pane" id="makati" role="tabpanel" aria-labelledby="">
                    <button type="button" class="btn btn-outline-dark btn-lg mr-5 mt-3">10:00 am</button>
                    <button type="button" class="btn btn-outline-dark btn-lg mr-5 mt-3">09:00 am</button>
                    <button type="button" class="btn btn-outline-dark btn-lg mr-5 mt-3">08:00 am</button>
                </div>
            </div>
            <hr class="my-4">
            <h2 class="text-left my-4">Seat Selection </h2>
                <a href="/movie/<%= movie.Title %>/select_seat" type="button" class="btn btn-dark btn-lg btn-block mr-5 mt-3">Select Seat(s)</a>
        </div>
    </div>
    <%- include ('../partials/footer.ejs') %>