<div class="container mt-5">
  <div class="card text">
    <div class="card-body">
      <h5 class="card-title mb-3">Identify Your Account</h5>
      <hr class="badge-secondary mb-4">
      <%- include ('../../partials/messages/error_message.ejs') %>
      <%- include ('../../partials/messages/info_message.ejs') %>
      <form action="/admin/forgot_password/verify_code" method="POST">
        <input type="text" class="form-control" id="code" name="code" placeholder="Enter Code" maxlength="6">
        <input type="text" name="email" id="email" value="<%=email%>" hidden>
        <button type="submit" id="verify" class="btn btn-primary btn-sm mt-3 float-right mr-2">Verify</button>
      </form>
    </div>
  </div>
</div>