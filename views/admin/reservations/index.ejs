<%- include ('../partials/header.ejs', {username: username, role: role}) %>
<div class="container-fluid">
    <div class="jumbotron">
        <div class="card">
            <div class="card-header">
                Reservation
            </div>
            <div class="card-body">
                <h5 class="card-search">
                    <button class="btn btn-primary">All</button>
                    <button class="btn btn-outline-primary">Reserved</button>
                    <button class="btn btn-outline-warning">Pending</button>
                    <button class="btn btn-outline-danger">Cancelled</button>
                    <form class="form-inline my-2 my-lg-0 float-right">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i
                                class="fa fa-search"></i></button>
                    </form>
                </h5>
                <table class="table table-hover table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Reservation</th>
                            <th scope="col">Name</th>
                            <th scope="col">Movie</th>
                            <th scope="col">Ticket(s)</th>
                            <th scope="col">Showtime</th>
                            <th scope="col">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th>ADT144</th>
                            <td>Mark</td>
                            <td>Avatar</td>
                            <td>3</td>
                            <td>10:30</td>
                            <td class="option">
                                <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                                    <option selected>Reserved</option>
                                    <option value="1">Pending</option>
                                    <option value="2">Cancelled</option>
                                </select>
                            </td>
                        </tr>
                    </tbody>
                    <tbody>
                        <tr>
                            <th>ADT155</th>
                            <td>Masnzon</td>
                            <td>Aquaman</td>
                            <td>1</td>
                            <td>10:30</td>
                            <td class="option">
                                <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                                    <option selected>Reserved</option>
                                    <option value="1">Pending</option>
                                    <option value="2">Cancelled</option>
                                </select>
                            </td>
                        </tr>
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
