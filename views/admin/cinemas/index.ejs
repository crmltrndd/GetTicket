<%- include ('../partials/header.ejs', {username: username, role: role}) %>
<div class="container-fluid">
    <div class="jumbotron">
        <div class="card">
            <div class="card-header">
                <h3 class="m-0">Cinemas</h3>
            </div>
            <div class="card-body">
                <h5 class="card-search">
                    <button class="btn btn-outline-success">+ Add Hall</button>
                    <button class="btn btn-outline-success"> Active</button>
                    <button class="btn btn-outline-danger"> Inactive</button>
                    <form class="form-inline my-2 my-lg-0 float-right">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i
                                class="fa fa-search"></i></button>
                    </form>
                </h5>
                <table class="table table-hover table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Halls</th>
                            <th scope="col">Status</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th>Manila</th>
                            <td>5</td>
                            <td class="option">
                                <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                                    <option selected>Active</option>
                                    <option value="1">Inactive</option>
                                </select>
                            </td>
                            <td class="table-buttons text-right">
                                <button class="btn btn-info"><i class="fa fa-edit"></i></button>
                                <button type="button" class="btn btn-danger" data-toggle="modal"
                                    data-target="#confirmation"><i class="fa fa-trash">
                                    </i></button>
                            </td>
                        </tr>
                    </tbody>
                    <tbody>
                        <tr>
                            <th>Taguig</th>
                            <td>6</td>
                            <td class="option">
                                <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                                    <option selected>Active</option>
                                    <option value="1">Inactive</option>
                                </select>
                            <td class="table-buttons text-right">
                                <button class="btn btn-info"><i class="fa fa-edit"></i></button>
                                <button type="button" class="btn btn-danger" data-toggle="modal"
                                    data-target="#confirmation"><i class="fa fa-trash">
                                    </i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirmation" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this record?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>
<%- include ('../partials/footer.ejs') %>